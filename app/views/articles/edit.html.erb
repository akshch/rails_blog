  <h1>Edit article</h1>

<%= form_with(model: @article, local: true) do |form| %>

   <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluarlize(@article.errors.count, "errors") %>
  prohibited
          this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
         <% end %>
      </ul>
     </div>
   <% end %>

   <p>
     <%= form.label :title %><br>
     <%= form.text_field :title %>
   </p>

   <p>
    <%= form.label :text %><br>
    <%= form.text_area :text%>
   </p>

   <p>
     <%= image_submit_tag("og.png", width: '100px') %>
   </p>

 <% end %>

